#!/bin/bash
#
# Ktlint pre-commit hook
# This hook runs ktlintCheck before allowing a commit
#
# Installation:
#   Run once from repository root: ./.githooks/setup.sh
#   This configures git to use .githooks directory for all hooks
#
# Features:
# - Runs ktlintCheck to verify code formatting
# - Provides clear, color-coded console feedback
# - Blocks commits if formatting issues are found
#

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

cd "$REPO_ROOT"

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}════════════════════════════════════════════════════════════${NC}"
echo -e "${BLUE}Running ktlint check...${NC}"
echo -e "${BLUE}════════════════════════════════════════════════════════════${NC}"

# Run ktlintCheck with daemon for faster execution
./gradlew ktlintCheck --daemon

if [ $? -eq 0 ]; then
    echo ""
    echo -e "${GREEN}✅ Ktlint check passed!${NC}"
    echo -e "${GREEN}✅ Commit proceeding...${NC}"
    exit 0
else
    echo ""
    echo -e "${RED}❌ Ktlint check failed! Commit blocked.${NC}"
    echo ""
    echo -e "${YELLOW}Action required - fix formatting issues:${NC}"
    echo -e "${YELLOW}  • CLI: ./gradlew ktlintFormat${NC}"
    echo -e "${YELLOW}  • IDE: Tasks > formatting > ktlintFormat${NC}"
    echo ""
    echo -e "${YELLOW}Then review and stage the changes before committing again.${NC}"
    echo ""
    echo -e "${YELLOW}To bypass this check (not recommended):${NC}"
    echo -e "${YELLOW}  git commit --no-verify${NC}"
    exit 1
fi
